# Backend Environment Variables - Producción
# ==========================================
# Este archivo es solo un template. Completa los valores reales según tu entorno.

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://<TU_SUPABASE_PROJECT>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=<TU_SUPABASE_ANON_KEY>
SUPABASE_SERVICE_ROLE_KEY=<TU_SUPABASE_SERVICE_ROLE_KEY>

# Prisma - PostgreSQL Connection (Session Pooler)
DATABASE_URL="postgresql://<USER>:<PASSWORD>@<HOST>:6543/postgres?pgbouncer=true"
# Direct connection (para migraciones)
DIRECT_URL="postgresql://<USER>:<PASSWORD>@<HOST>:5432/postgres"

# Cloudinary (opcional)
CLOUDINARY_CLOUD_NAME=<TU_CLOUD_NAME>
CLOUDINARY_API_KEY=<TU_API_KEY>
CLOUDINARY_API_SECRET=<TU_API_SECRET>

# Frontend URL (para CORS)
FRONTEND_URL=https://rural24.com.ar

# Entorno
NODE_ENV=production

# CRON_SECRET (si usas jobs programados)
CRON_SECRET=<TU_CRON_SECRET>
